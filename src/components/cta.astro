---
import Link from "./ui/link.astro";
import { Icon } from "astro-icon/components";
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-4xl tracking-tight">
    Want to get in touch?
  </h2>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/maxvandijck"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-6 h-6" name="bx:bxl-github" />
         GitHub
      </Link>
      <Link
        href="#"
        href="https://linkedin.com/in/max-van-dijck"
        size="lg"
        style="outline"
        rel="noopener"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-6 h-6" name="mdi:linkedin" />
         LinkedIn
      </Link>
      <Link
        href="#"
        href="/contact"
        size="lg"
        style="outline"
        rel="noopener"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-6 h-6" name="bx:bx-mail-send" />
         Contact
      </Link>
    </div>
</div>
